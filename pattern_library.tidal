d1 $ sound "bd:6 ~ cr ~ sn:7 ~ ~ ~ bd ~ ~ ~ sn:1 ~ ~ ~"
d1 $ sound "bd ~ hh ~ sn:2 ~ hh ~ bd ~ ~ ~ sn:2 ~ ~ ~"
d1 $ sound "bd ~ hh ~ sn:2 ~ hh ~ bd ~ hh ~ sn:2 ~ hh:8 ~" # speed "2"
